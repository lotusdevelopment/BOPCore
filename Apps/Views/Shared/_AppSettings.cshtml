@using Apps.App_Start
@{
    var apps = SessionConfig.Apps;
    if (apps.Count > 2)
    {
        <li class="hidden-xs">
            <a href="#" class="right-bar-toggle waves-effect waves-light"><i class="md md-settings"></i></a>
        </li>
        <div class="side-bar right-bar">
            <div class="nicescroll" tabindex="5001" style="overflow: hidden; outline: none;">
                <ul class="nav nav-tabs tabs" style="width: 100%;">
                    <li class="active tab" style="width: 33.3333%;">
                        <a href="#AppsList" data-toggle="tab" aria-expanded="true">
                            <span class="visible-xs"><i class="fa fa-envelope-o"></i></span>
                            <span class="hidden-xs">App Selector</span>
                        </a>
                    </li>
                    <div class="indicator" style="right: 181px; left: 0px;"></div>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="AppsList">
                        @{
                            foreach (var app in apps)
                            {
                                if (app.AppId == SessionConfig.CurrentApp.AppId)
                                {
                                    <div class="row m-t-20">
                                        <div class="col-xs-8">
                                            <h5 class="m-0">@app.AppName</h5>
                                        </div>
                                        <div class="col-xs-4 text-right" id="@string.Concat("AppId",app.AppId)">
                                            <input type="checkbox" class="appChanger" disabled="" data-appId="@app.AppId" checked="" data-plugin="switchery" data-color="#3bafda" data-size="small" data-switchery="true" style="display: none;">
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="row m-t-20">
                                        <div class="col-xs-8">
                                            <h5 class="m-0">@app.AppName</h5>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <input type="checkbox" class="appChanger" data-appId="@app.AppId" data-plugin="switchery" data-color="#3bafda" data-size="small" data-switchery="true" style="display: none;">
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
                <div id="ascrail2002" class="nicescroll-rails" style="width: 8px; z-index: 99; cursor: default; position: absolute; top: -70px; left: -1357px; height: 100px; display: none;"><div style="position: relative; top: 0px; float: right; width: 6px; height: 0px; background-color: rgb(152, 166, 173); border: 1px solid rgb(255, 255, 255); background-clip: padding-box; border-radius: 5px;"></div></div><div id="ascrail2002-hr" class="nicescroll-rails" style="height: 8px; z-index: 99; top: 22px; left: -1349px; position: absolute; cursor: default; display: none;"><div style="position: relative; top: 0px; height: 6px; width: 0px; background-color: rgb(152, 166, 173); border: 1px solid rgb(255, 255, 255); background-clip: padding-box; border-radius: 5px;"></div></div>
            </div>
            <div id="ascrail2001" class="nicescroll-rails" style="width: 8px; z-index: 99; cursor: default; position: absolute; top: 0px; left: 262px; height: 568px; opacity: 0;"><div style="position: relative; top: 0px; float: right; width: 6px; height: 380px; background-color: rgb(152, 166, 173); border: 1px solid rgb(255, 255, 255); background-clip: padding-box; border-radius: 5px;"></div></div><div id="ascrail2001-hr" class="nicescroll-rails" style="height: 8px; z-index: 99; top: 560px; left: 0px; position: absolute; cursor: default; display: none; width: 262px; opacity: 0;"><div style="position: relative; top: 0px; height: 6px; width: 270px; background-color: rgb(152, 166, 173); border: 1px solid rgb(255, 255, 255); background-clip: padding-box; border-radius: 5px;"></div></div>
        </div>
        <script src="~/Scripts/RightMenuScript.js"></script>
    }
}